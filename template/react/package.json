{
    "name": "react-vite",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "prepare": "husky install",
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "up:vite": "pnpm up vite @vitejs/* -L",
        "format": "prettier --write \"src/**/*.{ts,js,tsx,jsx,css,scss,less}\" \"./package.json\"",
        "lint": "eslint ./src/**/*.{tsx,ts} && stylelint ./src/**/*.{css,scss,less}",
        "lint:fix": "eslint ./src/**/*.{tsx,ts} --fix && stylelint ./src/**/*.{css,scss,less} --fix",
        "test:watchs": "jest --watch",
        "test": "jest",
        "test:coverage": "jest --silent --watchAll=false --coverage",
        "cz": "cz",
        "push": "npm run commit && git push",
        "commit": "git add . && npm run cz"
    },
    "dependencies": {
        "immer": "^9.0.15",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-router-dom": "6.3.0",
        "zustand": "4.0.0"
    },
    "devDependencies": {
        "@testing-library/dom": "8.14.0",
        "@testing-library/jest-dom": "5.16.5",
        "@testing-library/react": "13.3.0",
        "@testing-library/user-event": "14.4.2",
        "@types/jest": "28.1.6",
        "@types/react": "18.0.15",
        "@types/react-dom": "18.0.6",
        "@types/testing-library__jest-dom": "5.14.5",
        "@typescript-eslint/eslint-plugin": "5.32.0",
        "@typescript-eslint/parser": "5.32.0",
        "@vitejs/plugin-react": "2.0.0",
        "autoprefixer": "10.4.8",
        "commitizen": "4.2.5",
        "cssnano": "5.1.12",
        "cz-adapter-eslint": "0.3.0",
        "eslint": "8.21.0",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "7.30.1",
        "eslint-plugin-react-hooks": "4.6.0",
        "husky": "8.0.1",
        "jest": "28.1.3",
        "jest-environment-jsdom": "28.1.3",
        "postcss": "8.4.14",
        "postcss-import": "14.1.0",
        "postcss-nesting": "10.1.10",
        "prettier": "2.7.1",
        "stylelint": "14.9.1",
        "stylelint-config-standard": "26.0.0",
        "tailwindcss": "3.1.8",
        "typescript": "4.7.4",
        "vite": "3.0.9",
        "vite-plugin-eslint": "1.8.1"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-adapter-eslint"
        }
    }
}
