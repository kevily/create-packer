{
    "name": "web-extension",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "prepare": "husky install",
        "dev": "vite",
        "build": "tsc --noEmit && vite build",
        "preview": "vite preview",
        "up:vite": "pnpm up vite @vitejs/* -L",
        "format": "prettier --write \"**/*.{ts,js,tsx,jsx,json,css,scss,less,json}\"",
        "lint": "tsc --noEmit && eslint **/*.{tsx,ts} && stylelint **/*.{css,scss,less}",
        "lint:fix": "eslint **/*.{tsx,ts} --fix && stylelint **/*.{css,scss,less} --fix",
        "test:watchs": "jest --watch",
        "test": "jest",
        "test:coverage": "jest --silent --watchAll=false --coverage",
        "cz": "cz",
        "push": "npm run commit && git push",
        "commit": "git add . && npm run cz"
    },
    "dependencies": {
        "immer": "10.0.1",
        "lodash-es": "4.17.21",
        "qs": "6.11.2",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "zustand": "4.3.7"
    },
    "devDependencies": {
        "@commitlint/cli": "17.6.1",
        "@commitlint/config-conventional": "17.6.1",
        "@commitlint/cz-commitlint": "17.5.0",
        "@crxjs/vite-plugin": "2.0.0-beta.18",
        "@testing-library/dom": "9.2.0",
        "@testing-library/jest-dom": "5.16.5",
        "@testing-library/react": "14.0.0",
        "@testing-library/user-event": "14.4.3",
        "@types/jest": "29.5.1",
        "@types/lodash-es": "4.17.7",
        "@types/node": "18.16.0",
        "@types/qs": "6.9.7",
        "@types/react": "18.0.38",
        "@types/react-dom": "18.0.11",
        "@types/testing-library__jest-dom": "5.14.5",
        "@typescript-eslint/eslint-plugin": "5.59.0",
        "@typescript-eslint/parser": "5.59.0",
        "@vitejs/plugin-react": "4.0.0",
        "autoprefixer": "10.4.14",
        "commitizen": "4.3.0",
        "cssnano": "6.0.0",
        "eslint": "8.39.0",
        "eslint-import-resolver-typescript": "3.5.5",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-prettier": "5.0.0",
        "eslint-plugin-react": "7.32.2",
        "eslint-plugin-react-hooks": "4.6.0",
        "husky": "8.0.3",
        "inquirer": "8",
        "jest": "29.5.0",
        "jest-environment-jsdom": "29.5.0",
        "postcss": "8.4.23",
        "postcss-import": "15.1.0",
        "postcss-nesting": "11.2.2",
        "prettier": "3.0.0",
        "stylelint": "15.7.0",
        "stylelint-config-standard": "33.0.0",
        "tailwindcss": "3.3.1",
        "typescript": "5.0.4",
        "vite": "4.3.1",
        "vite-plugin-checker": "0.6.1"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
