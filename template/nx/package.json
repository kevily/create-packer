{
    "name": "nx",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "build": "nx build",
        "build:all": "nx run-many -t build",
        "lint": "nx run-many -t lint && nx-stylelint:lint",
        "lint:fix": "nx run-many -t lint --fix && nx-stylelint:lint --fix",
        "format": "nx format:write",
        "format:all": "nx format:write --libs-and-apps",
        "add:react-lib": "nx g @nrwl/react:lib",
        "add:react-app": "nx g @nrwl/react:app",
        "add:vue-lib": "nx g @nx-plus/vue:lib",
        "add:vue-app": "nx g @nx-plus/vue:app",
        "add:ng-lib": "nx g @nrwl/angular:lib",
        "add:ng-app": "nx g @nrwl/angular:app",
        "add:ts-lib": "nx g @nrwl/js:lib",
        "add:ts-app": "nx g @nrwl/js:app",
        "add:eslint": "nx g @nrwl/linter:workspace-rule",
        "add:storybook": "nx g @nrwl/storybook:configuration",
        "add:stylelint": "nx g nx-stylelint:configuration --project",
        "rm": "nx g @nx/workspace:remove",
        "log": "nx view-logs",
        "changeVersion": "pnpm changeset && pnpm changeset version && pnpm run clear:changelog",
        "clear:changelog": "pnpm -r exec rimraf CHANGELOG.md",
        "login": "npm login --registry http://registry.npmjs.org",
        "pub": "pnpm run changeVersion && pnpm run build && pnpm run push && pnpm -r publish --registry https://registry.npmjs.org",
        "cz": "cz",
        "push": "npm run commit && git push",
        "commit": "git add . && npm run cz"
    },
    "private": true,
    "devDependencies": {
        "@changesets/cli": "^2.26.1",
        "@commitlint/cli": "17.6.5",
        "@commitlint/config-conventional": "17.6.5",
        "@commitlint/cz-commitlint": "17.5.0",
        "@nrwl/angular": "16.3.2",
        "@nrwl/js": "16.3.2",
        "@nrwl/linter": "16.3.2",
        "@nrwl/react": "16.3.2",
        "@nrwl/storybook": "16.3.2",
        "@nrwl/workspace": "16.3.2",
        "@nx-plus/vue": "14.1.0",
        "commitizen": "4.3.0",
        "eslint": "8.42.0",
        "nx": "16.3.2",
        "nx-stylelint": "15.0.0",
        "prettier": "2.8.8",
        "typescript": "5.1.3"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
