{
    "name": "solid",
    "scripts": {
        "prepare": "husky install",
        "dev": "solid-start dev",
        "build": "solid-start build",
        "start": "solid-start start",
        "up:vite": "pnpm up vite @vitejs/* -L",
        "format": "prettier --write \"src/**/*.{ts,js,tsx,jsx,css,scss,less}\" \"./package.json\"",
        "lint": "eslint ./src/**/*.{tsx,ts} && stylelint ./src/**/*.{css,scss,less}",
        "lint:fix": "eslint ./src/**/*.{tsx,ts} --fix && stylelint ./src/**/*.{css,scss,less} --fix",
        "cz": "cz",
        "push": "npm run commit && git push",
        "commit": "git add . && npm run cz"
    },
    "type": "module",
    "devDependencies": {
        "@commitlint/cli": "17.6.1",
        "@commitlint/config-conventional": "17.6.1",
        "@commitlint/cz-commitlint": "17.5.0",
        "@types/node": "18.16.0",
        "@typescript-eslint/eslint-plugin": "5.59.0",
        "@typescript-eslint/parser": "5.59.0",
        "autoprefixer": "10.4.14",
        "commitizen": "4.3.0",
        "cssnano": "6.0.0",
        "esbuild": "0.14.54",
        "eslint": "8.39.0",
        "eslint-import-resolver-typescript": "3.5.5",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-prettier": "4.2.1",
        "eslint-plugin-solid": "0.12.1",
        "husky": "8.0.3",
        "inquirer": "8",
        "postcss": "8.4.21",
        "postcss-import": "15.1.0",
        "postcss-nesting": "11.2.2",
        "prettier": "2",
        "solid-start-node": "0.2.19",
        "stylelint": "15.6.0",
        "stylelint-config-standard": "33.0.0",
        "tailwindcss": "3.3.1",
        "typescript": "4.9.4",
        "vite": "4.1.4",
        "vite-plugin-eslint": "1.8.1"
    },
    "dependencies": {
        "@solidjs/meta": "0.28.2",
        "@solidjs/router": "0.8.2",
        "solid-js": "1.7.2",
        "solid-start": "0.2.26",
        "undici": "5.15.1"
    },
    "engines": {
        "node": ">=16.8"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
