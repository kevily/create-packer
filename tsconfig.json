{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": false,
        "resolveJsonModule": true,
        "allowJs": true,
        "target": "ESNext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": true,
        "outDir": "bin",
        "baseUrl": ".",
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**"]
}
