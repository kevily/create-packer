{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "noImplicitAny": false,
        "sourceMap": false,
        "declaration": true,
        "outDir": "bin",
        "baseUrl": ".",
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
